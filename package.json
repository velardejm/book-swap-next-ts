    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.1.4",
    "postcss": "^8",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.5",
    "storybook": "^8.2.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
